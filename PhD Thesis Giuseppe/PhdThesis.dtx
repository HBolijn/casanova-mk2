\fi
\if@twoside
	\newcommand*{\phd@chaptermark}[1]{\markboth{#1}{}}
	\newcommand*{\phd@sectionmark}[1]{\markright{#1}}
	\let\@phd@mkboth\markboth
\else
	\newcommand*{\phd@chaptermark}[1]{\markright{#1}}
	\newcommand*{\phd@sectionmark}[1]{}
	\let\@phd@mkboth\@gobbletwo
\fi
